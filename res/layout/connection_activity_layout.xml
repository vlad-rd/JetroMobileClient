<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="10dp" >

    <!-- Connection Form - Wrapper -->

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/buttons_container" >

        <LinearLayout
            android:id="@+id/wrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <!-- Host Name - Label -->

            <LinearLayout
                android:id="@+id/wrapper_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/first_star"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/star_image_right"
                    android:layout_marginTop="1dp"
                    android:src="@drawable/star" />

                <TextView
                    android:id="@+id/first_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/connection_name_lbl"
                    android:textColor="@color/black"
                    android:textSize="@dimen/edittext_lbl" />
            </LinearLayout>

            <!-- Host Name - Edit Text -->

            <EditText
                android:id="@+id/first_input"
                style="@style/GrayBorderEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:cursorVisible="true"
                android:inputType="text"
                android:singleLine="true"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/edittext_lbl" />

            <!-- Host - Label -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/second_star"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/star_image_right"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/star" />

                <TextView
                    android:id="@+id/second_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="@string/host_ip_lbl"
                    android:textColor="@color/black"
                    android:textSize="@dimen/edittext_lbl" />
            </LinearLayout>

            <!-- Host - Edit Text -->

            <EditText
                android:id="@+id/second_input"
                style="@style/GrayBorderEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:cursorVisible="true"
                android:inputType="date"
                android:singleLine="true"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/edittext_lbl" />

            <!-- Port - Label -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/third_star"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/star_image_right"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/star" />

                <TextView
                    android:id="@+id/third_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="@string/host_port_lbl"
                    android:textColor="@color/black"
                    android:textSize="@dimen/edittext_lbl" />
            </LinearLayout>

            <!-- Port - Edit Text -->

            <EditText
                android:id="@+id/third_input"
                style="@style/GrayBorderEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:cursorVisible="true"
                android:imeOptions="actionGo"
                android:inputType="number"
                android:singleLine="true"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/edittext_lbl" />

            <!-- Connection Mode - ComboBox -->

            <RelativeLayout
                android:id="@+id/connection_mode_spinner_wrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:animateLayoutChanges="true" >

                <Spinner
                    android:id="@+id/connection_mode_spinner"
                    style="@style/MySpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/spinner_background"
                    android:dropDownWidth="match_parent"
                    android:entries="@array/connection_mode_options"
                    android:listSelector="@drawable/selector_back_button"
                    android:popupBackground="#bbbbbb"
                    android:spinnerMode="dropdown" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/down" />
            </RelativeLayout>

            <!-- Connection Mode - Text -->

            <TextView
                android:id="@+id/connection_mode_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:paddingLeft="14dp"
                android:text="Connection mode"
                android:textColor="@color/black"
                android:textSize="@dimen/edittext_lbl" />

            <!-- Connection Mode - Edit Text -->

            <EditText
                android:id="@+id/connection_mode_input"
                style="@style/GrayBorderEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:cursorVisible="true"
                android:inputType="date"
                android:singleLine="true"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/edittext_lbl" />

            <!-- Login Screen Image -->

            <ImageView
                android:id="@+id/login_screen_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/icon_jetro_launcher" />
        </LinearLayout>
    </ScrollView>

    <!-- Connect - Button -->

    <LinearLayout
        android:id="@+id/buttons_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:weightSum="2" >

        <TextView
            android:id="@+id/left_button"
            style="@style/DefaultButtonState"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.99"
            android:text="@string/connect_lbl"
            android:textSize="@dimen/button_text_lbl" />

        <ImageView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.02" />

        <TextView
            android:id="@+id/right_button"
            style="@style/DefaultButtonState"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.99"
            android:text="@string/connect_lbl"
            android:textSize="@dimen/button_text_lbl" />
    </LinearLayout>

</RelativeLayout>