<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:padding="10dp" >

    <!-- Connection Form - Wrapper -->

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <LinearLayout
            android:id="@+id/wrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <!-- User Name - Label -->

            <LinearLayout
                android:id="@+id/wrapper_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/username_star"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/star_icon_size"
                    android:layout_marginEnd="@dimen/star_icon_size"
                    android:layout_marginTop="1dp"
                    android:src="@drawable/star" />

                <TextView
                    android:id="@+id/username_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/user_name_lbl"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/edit_text_label_text_size" />
            </LinearLayout>

            <!-- User Name - Edit Text -->

            <EditText
                android:id="@+id/username_input"
                style="@style/GrayBorderEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/black_border_square"
                android:cursorVisible="true"
                android:hint="@string/user_name_hint"
                android:inputType="text|textNoSuggestions|textVisiblePassword"
                android:singleLine="true"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/edit_text_label_text_size" />

            <!-- Password - Label -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/password_star"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/star_icon_size"
                    android:layout_marginEnd="@dimen/star_icon_size"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/star" />

                <TextView
                    android:id="@+id/password_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="@string/password_lbl"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/edit_text_label_text_size" />
            </LinearLayout>

            <!-- Password - Edit Text -->

            <EditText
                android:id="@+id/password_input"
                style="@style/GrayBorderEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/black_border_square"
                android:cursorVisible="true"
                android:hint="@string/password_hint"
                android:inputType="text|textPassword"
                android:singleLine="true"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/edit_text_label_text_size" />

            <!-- Domain - Label -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/domain_star"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/star_icon_size"
                    android:layout_marginEnd="@dimen/star_icon_size"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/star" />

                <TextView
                    android:id="@+id/domain_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="@string/domain_lbl"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/edit_text_label_text_size" />
            </LinearLayout>

            <!-- Domain - Edit Text -->

            <EditText
                android:id="@+id/domain_input"
                style="@style/GrayBorderEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/black_border_square"
                android:cursorVisible="true"
                android:hint="@string/domain_hint"
                android:imeOptions="actionGo"
                android:inputType="text|textNoSuggestions|textVisiblePassword"
                android:singleLine="true"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/edit_text_label_text_size" />

            <!-- Login Screen Image -->

            <ImageView
                android:id="@+id/login_screen_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:visibility="gone" />
        </LinearLayout>
    </ScrollView>

    <!-- Buttons -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2" >

        <!-- Cancel - Button -->

        <TextView
            android:id="@+id/cancel_button"
            style="@style/DefaultButtonState"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.99"
            android:background="@drawable/orange_button_selector"
            android:text="@string/cancel_lbl"
            android:textSize="@dimen/button_label_text_size" />

        <ImageView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.02" />

        <!-- Login - Button -->

        <TextView
            android:id="@+id/login_button"
            style="@style/DefaultButtonState"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.99"
            android:background="@drawable/orange_button_selector"
            android:text="@string/login_lbl"
            android:textSize="@dimen/button_label_text_size" />
    </LinearLayout>

</LinearLayout>