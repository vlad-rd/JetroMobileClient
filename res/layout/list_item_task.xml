<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/list_item_selector"
    android:descendantFocusability="blocksDescendants"
    android:padding="@dimen/list_item_padding" >

    <!-- List Item - Task Icon -->

    <ImageView
        android:id="@+id/task_icon"
        android:layout_width="@dimen/list_item_task_icon_size"
        android:layout_height="@dimen/list_item_task_icon_size"
        android:contentDescription="Task icon" />

    <!-- List Item - Task Title -->

    <TextView
        android:id="@+id/task_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_margin="8dp"
        android:layout_toEndOf="@id/task_icon"
        android:layout_toRightOf="@id/task_icon"
        android:ellipsize="end"
        android:maxLines="1"
        android:singleLine="true"
        android:textSize="18sp" />

    <!-- List Item - Delete Button Drawable -->

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_margin="@dimen/list_item_task_delete_button_image_margin"
        android:background="@drawable/delete" />

    <!-- List Item - Delete Button -->

    <Button
        android:id="@+id/delete_button"
        android:layout_width="@dimen/list_item_task_delete_button_width"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@android:color/transparent" />

</RelativeLayout>