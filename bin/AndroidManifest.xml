        </activity>
        <activity android:name="com.jetro.mobileclient.ui.ConnectionsListActivity" android:screenOrientation="portrait" android:windowSoftInputMode="adjustNothing|stateHidden">
        </activity>
        <activity android:name="com.jetro.mobileclient.ui.DesktopActivity" android:screenOrientation="landscape" android:windowSoftInputMode="adjustNothing|stateHidden">

